<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Blog -->
        <service id="BlogSystem\Core\Content\Blog\BlogDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <!-- Blog Translation -->
        <service id="BlogSystem\Core\Content\Blog\Aggregate\BlogTranslation\BlogTranslationDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="BlogSystem\Core\Content\BlogCategory\BlogCategoryDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="BlogSystem\Core\Content\BlogCategory\Aggregate\BlogCategoryTranslation\BlogCategoryTranslationDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="BlogSystem\Core\Content\Blog\Aggregate\BlogProductMapping\BlogProductMappingDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <!-- Extensions -->
        <service id="BlogSystem\Core\Extension\ProductExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="BlogSystem\Core\Extension\BlogCategoryExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="BlogSystem\Core\Extension\LanguageExtension">
            <tag name="shopware.entity.extension"/>
        </service>
    </services>
</container>