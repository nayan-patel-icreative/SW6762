        {% set newsletterTitleHiddenClass = 'd-none' %}
        {% set newsletterFooterLogoClass = 'has-footer-logo' %}
    {% endif %}

    {% block zen_layout_footer_newsletter %}
        {% if theme_config('zen-footer-newsletter-position') is same as ('prepend') %}
