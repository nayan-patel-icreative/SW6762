                <div class="container">
                    <div class="row">
                        {% block zen_layout_footer_newsletter_logo %}
                            {# footer logo #}
                            {% if theme_config('zen-footer-logo-position') is same as ('newsletter') %}
                                <div class="footer-logo col-12 col-md-auto">
                                    {% sw_include '@zenitPlatformGravity/storefront/component/footer/zen-footer-logo.html.twig' %}
                                </div>
                            {% endif %}
                        {% endblock %}

                        <div class="footer-newsletter-col col">
                            {% sw_include '@zenitPlatformGravity/storefront/component/footer/zen-footer-newsletter.html.twig' with {
                                action: 'frontend.form.newsletter.register.handle',
                                submitText: 'newsletter.formSubmit'
                            } %}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endblock %}

