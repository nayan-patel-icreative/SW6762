{% endblock %}

{% block component_pagination_next %}
    {# ... @compatibility - hide only because of tanmar infinite scrolling #}
    <li class="page-item page-next{% if currentPage == totalPages %} disabled{% if hideDisabled %} d-none{% endif %}{% endif %}">
        {{ block('component_pagination_next_input') }}
        {{ block('component_pagination_next_label') }}
    </li>
{% endblock %}

