{% sw_extends '@Storefront/storefront/component/pagination.html.twig' %}

{% set hideDisabled = theme_config('zen-layout-pagination-hide-disabled') ?: false %}

{% block component_pagination_first %}
    {# ... @compatibility - hide only because of tanmar infinite scrolling #}
    <li class="page-item page-first{% if currentPage == 1 %} disabled{% if hideDisabled %} d-none{% endif %}{% endif %}">
        {{ block('component_pagination_first_input') }}
        {{ block('component_pagination_first_label') }}
    </li>
{% endblock %}

