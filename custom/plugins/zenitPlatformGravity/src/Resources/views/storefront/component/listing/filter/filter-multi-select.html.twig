{% sw_extends '@Storefront/storefront/component/listing/filter/filter-multi-select.html.twig' %}

{% block component_filter_multi_select_toggle_icon %}
    {% if theme_config('zen-category-filter-icon') is same as ('plus') %}
        {% sw_icon 'plus' style {
            pack: 'solid', size: 'xs', class: 'filter-panel-item-toggle'
        } %}
    {% elseif theme_config('zen-category-filter-icon') is same as ('plusminus') %}
        {% sw_icon 'plus' style {
            pack: 'solid', size: 'xs', class: 'filter-panel-item-toggle'
        } %}
        {% sw_icon 'minus' style {
            pack: 'solid', size: 'xs', class: 'filter-panel-item-toggle'
        } %}
    {% elseif theme_config('zen-category-filter-icon') is same as ('arrow') %}
        {{ parent() }}
    {% endif %}
{% endblock %}
